    },
    "description": {
      "type": "string"
    },
    "price": {
      "type": "number"
    },
    "category": {
      "type": "string",
      "enum": [
        "Security Tools",
        "AI Tools",
        "Enterprise Solutions",
        "Consulting"
      ]
