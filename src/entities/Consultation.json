{
  "name": "Consultation",
  "type": "object",
  "properties": {
    "full_name": {
      "type": "string",
      "description": "Client full name"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "company": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "service_interest": {
      "type": "string",
      "enum": [
        "Master Covenant",
        "Security Tools",
        "NUPS POS",
        "AI Tools",
        "Custom Solution"
      ]
    },
    "message": {
      "type": "string"
    },
    "preferred_date": {
      "type": "string",
      "format": "date"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "confirmed",
        "completed",
        "cancelled"
      ],
      "default": "pending"
    },
    "payment_status": {
      "type": "string",
      "enum": [
        "pending",
        "paid",
        "refunded"
      ],
      "default": "pending"
    }
  },
  "required": [
    "full_name",
    "email",
    "service_interest"
  ]
}