{
  "name": "POSBatch",
  "type": "object",
  "properties": {
    "batch_id": {
      "type": "string",
      "description": "Unique batch identifier"
    },
    "start_time": {
      "type": "string",
      "format": "date-time"
    },
    "end_time": {
      "type": "string",
      "format": "date-time"
    },
    "opening_cash": {
      "type": "number"
    },
    "closing_cash": {
      "type": "number"
    },
    "total_sales": {
      "type": "number"
    },
    "transaction_count": {
      "type": "number"
    },
    "cashier": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "open",
        "closed"
      ],
      "default": "open"
    },
    "discrepancy": {
      "type": "number",
      "default": 0
    },
    "notes": {
      "type": "string"
    }
  },
  "required": [
    "opening_cash",
    "cashier"
  ]
}